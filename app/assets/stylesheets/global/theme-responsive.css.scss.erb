@import "global/palette.css.scss";

@media (max-width: 1200px) {

  #iphone_preview {
    height: 450px !important;
    top: 60px !important;
    width: 400px !important;
    background-size: 330px !important;
    right: -60px !important;
  }

  .pitch {
    padding-top: 30px !important;
    min-height: 474px !important;

  }

}

@media (max-width: 980px) {

  #search_form {
    width: 327px !important;
    margin-top: 90px !important;
  }

  .navbar-inner {
    padding: 0px !important;
  }

  .pitch {
    #customer_type {
      margin-left: 1px !important;
    }

    padding-top: 0px !important;
    min-height: 474px !important;

    #iphone_preview {
      height: 400px !important;
      top: 160px !important;
      width: 300px !important;
      background-size: 300px !important;
    }
  }

  .desktop {
    position: relative;
    z-index: -2;
  }

  .secondary {
    position: relative;
    z-index: -2;

    .container {
      position: relative !important;
      margin-top: -60px;
      z-index: -1;
    }
  }

}

@media (max-width: 767px) {

  body {
    padding: 0;
    background-attachment: fixed;
    background-image: url("/assets/homebackground.png");
    background-repeat: no-repeat;
    background-size: cover;
  }

  .secondary {
    .container {
      padding: 0 10px;
      margin-bottom: 20px;
    }
  }

  .pitch {
    padding: 0 15px;

    h2 {
      margin: 5px 0 !important;
      max-width: 480px;
    }

    .stressfree {
      padding-left: 8px !important;
    }
  }

}

@media (max-width: 610px) {



  footer {
    padding: 10px !important;
  }

  #iphone_preview {
    display: none;
  }

  form {
    margin-top: 20px !important;
  }

  .search-area {
    margin-left: 0 !important;
    padding-left: 0 !important;
  }

  .pitch {
    padding: 0 20px;
    margin-bottom: 10px;
    min-height: 360px !important;

    .stressfree {
      display: none;
    }

    #search_form {
      margin: 0 auto;
    }
  }

  .navbar {
    .nav {
      display: none !important;

      ul {
        background: none !important;
      }
    }
  }

  .secondary {
    .nav li a {
      margin: 3px;
      padding: 10px;
      border: 1px solid gray;
      border-radius: 3px;
    }
  }

  h2 {
    width: 100% !important;
    max-width: 100% !important;
    font-size: 32px;
    line-height: 52px;
    text-align: center !important;
    font: 2.2em "helvetica neue", helvetica, sans-serif;
  }

  h3 {
    font-size: 20px;
    line-height: 32px;
    text-align: center;
    font: 2em Helvetica;
    margin: 0 0 15px;
  }
}

@media (max-width: 500px) {

  body {
    //background-position-x: -320px !important;
  }

  footer {
    padding: 10px !important;
  }

  #iphone_preview {
    display: none;
  }

  .pitch {
    padding: 0;
    margin-bottom: 10px;
    min-height: 360px !important;

    #search_form {
      margin: 0 auto;
      padding: 5px !important;

      .search-area .call-to-action {
        width: 100% !important;
      }

      #customer_type > a {
        width: 298px;
      }

    }

    .search-area .call-to-action.large {
      float: none !important;
      margin-left: 0px;
      margin-top: 10px !important;
      margin-right: 5px !important;
      width: 100% !important;
    }
  }

  #search_form {
    max-width: 300px !important;

    #email_signup, #customer_type {
      max-width: 272px !important;
      margin-right: 5px !important;
      a {
        width: 272px !important;
      }
      * {
        max-width: 320px !important;

      }
    }
  }

  h2 {
    font-size: 32px;
    line-height: 52px;
    text-align: center !important;
    font: 2.2em "helvetica neue", helvetica, sans-serif;
    margin: 18px 0;
  }

  h3 {
    font-size: 20px;
    line-height: 32px;
    text-align: center;
    font: 2em Helvetica;
    margin: 0 0 15px;
  }
}