@media (max-width: 980px) {

  .pitch {
    padding-top: 0px !important;
    min-height: 474px !important;

    #iphone_preview {
      height: 400px !important;
      top: 160px !important;
      width: 300px !important;
      background-size: 300px !important;
    }
  }

  #search_form {
    width: 332px !important;
    margin-top: 90px !important;
  }
}

@media (max-width: 747px) {

  #iphone_preview {
    display: none;
  }

  body {
    padding: 0;
    background-attachment: fixed;
    background-image: url("/assets/homebackground.png");
    background-repeat: no-repeat;
    background-size: cover;
  }

  .container {
    padding: 0px;
  }

  .pitch {
    padding: 15px;

    .stressfree {
      display: none;
    }
  }

  .navbar {

    /*.brand {*/
      /*float: none;*/
      /*margin-bottom: 15px;*/
      /*margin-top: 8px;*/
      /*padding: 0;*/
    /*}*/

    .nav {
      clear: both;
      float: none;
      margin-top: 5px;
      margin: 0;
      height: 40px !important;

      li {
        float: left;
        margin: 4px 0px;
        height: 100%;

        a {
          text-align: left;
          padding-left: 0px;
          padding-right: 0px;
          height: 100%;
          padding: 0px 18px;
          font: 400 16px/28px "Helvetica Neue", helvetica, sans-serif;
        }
      }

    }
  }

}

@media (max-width: 480px) {

  .pitch {
    padding: 10px;
  }

  .nav {
    display: none;

    ul {
      background: none !important;
    }

  }

  h2 {
    font-size: 32px;
    line-height: 52px;
    text-align: left;
    font: 2.2em "helvetica neue", helvetica, sans-serif;
    margin: 18px 0;
  }

  h3 {
    font-size: 20px;
    line-height: 32px;
    text-align: center;
    font: 2em Helvetica;
    margin: 0 0 15px;
  }
}