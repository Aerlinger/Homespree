@import "global/palette.css.scss";

$headerHeight: 10px;
$shadow: 0px 0 8px 0 rgba(0, 0, 0, 0.5);

.header {
  height: $headerHeight;
  margin-bottom: -$headerHeight;
  opacity: 1;
}


/*
* navigation lists on both footer and nav-header
*/

.navbar-inner {
  background-color: white;
  box-shadow: none;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  filter: none;

  border-bottom: 3px solid #3a4964;

  #sign_in {
    a {
      color:  white;
      padding-bottom: 18px;
      &:hover {
        border-bottom: none;
        color: white !important;
        padding-bottom: 20px;
      }
    }

    &:hover {
      box-shadow: 0px 0 8px 0 rgba(0, 0, 0, 0.8);
    }


    border-left: 1px solid $homespree_lightgreen;
    border-right: 1px solid $homespree_lightgreen;
    border-bottom: 1px solid $homespree_lightgreen;

    padding-bottom: 3px;
    box-shadow: 0px 0 4px 0 rgba(0, 0, 0, 0.7);

    background-color: $homespree_green;
    border-radius: 0 0 5px 5px;
  }
}

.navbar {
  opacity: 1;
  box-shadow: 12px 0 15px 0 rgba(0, 0, 0, 0.5);
  border-bottom: 2px solid #8a9bf2;

  .brand {
    font-family: "Helvetica Neue", helvetica, sans-serif;
    font-weight: 700;
    font-size: 24px;
    padding: 0;
    margin-left: 0;
  }

  .nav {
    float: right;
    display: inline-block;
    height: 52px !important;

    li.nav_button {
      height: 40px;
      display: table;

      &:hover {
        background: #d5e2fd;
      }

      a {
        font: 400 17px/24px "Helvetica Neue", helvetica, sans-serif;
        padding: 15px 18px;
        margin: 2px;
        margin: auto !important;

        text-shadow: none;
        color: #3c456a;

        text-align: center;

        &:hover {
          border-bottom: 1px solid $homespree_accent;
          color: #272f5d !important;
        }
      }

      &:last-child {
        margin-left: 7px;
      }
    }
  }
}