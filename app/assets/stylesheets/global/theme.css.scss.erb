@import "global/palette.css.scss";

body.desktop {

  background-image: url(<%= asset_path "homebackground.jpg" %>);
  background-size: cover;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;

  .call-to-action {
    &.large {
      font-size: 18px;
    }

    &.green {
      border-color: black;
      background: #5dc907; /* Old browsers */
      background: -moz-linear-gradient(top,  #5dc907 0%, #57b906 50%, #50ad06 50.1%, #4fac04 100%); /* FF3.6+ */
      background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#5dc907), color-stop(50%,#57b906), color-stop(50.1%,#50ad06), color-stop(100%,#4fac04)); /* Chrome,Safari4+ */
      background: -webkit-linear-gradient(top,  #5dc907 0%,#57b906 50%,#50ad06 50.1%,#4fac04 100%); /* Chrome10+,Safari5.1+ */
      background: -o-linear-gradient(top,  #5dc907 0%,#57b906 50%,#50ad06 50.1%,#4fac04 100%); /* Opera 11.10+ */
      background: -ms-linear-gradient(top,  #5dc907 0%,#57b906 50%,#50ad06 50.1%,#4fac04 100%); /* IE10+ */
      background: linear-gradient(to bottom,  #5dc907 0%,#57b906 50%,#50ad06 50.1%,#4fac04 100%); /* W3C */
      filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#5dc907', endColorstr='#4fac04',GradientType=0 ); /* IE6-9 */

      &:hover {
        background: #68de08; /* Old browsers */
        background: -moz-linear-gradient(top,  #68de08 0%, #61cf07 50%, #5cc507 50%, #5ac305 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#68de08), color-stop(50%,#61cf07), color-stop(50%,#5cc507), color-stop(100%,#5ac305)); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top,  #68de08 0%,#61cf07 50%,#5cc507 50%,#5ac305 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top,  #68de08 0%,#61cf07 50%,#5cc507 50%,#5ac305 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top,  #68de08 0%,#61cf07 50%,#5cc507 50%,#5ac305 100%); /* IE10+ */
        background: linear-gradient(to bottom,  #68de08 0%,#61cf07 50%,#5cc507 50%,#5ac305 100%); /* W3C */
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#68de08', endColorstr='#5ac305',GradientType=0 ); /* IE6-9 */

      }
    }
  }


  .navbar {
    margin: 0px !important;
  }

  div.spacer10px {
    display:block;
    height: 10px;
    width: 100%
  }

  div.spacer20px {
    display:block;
    height: 20px;
    width: 100%
  }

  p {
    font: 300 16px/23px "Helvetica Neue", helvetica, sans-serif;
    font-weight: 300;
  }

  a {
    color: #338bb8;

    &:link, &:visited {
    }

    &:hover {
      color: #3799ca;
    }
  }

  a.btn {
    color: white;

    &:hover {
      color: white;
      text-decoration: none;
    }

  }

  label, input, button, select, textarea {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-weight: normal;
    line-height: 18px;
  }


  #flash_link {
    display: block;
    position: fixed;
    width: 100%;
    height: 58px;
    top: 60px;
    z-index: 100;

    h4, small {
      margin: 3px 0 0;
      margin-top: 3px;
      text-align: center;
      display: block;
      display: block;
    }

    small:hover {
      text-decoration: none;
    }

    .alert {
      padding: 0;
      margin: 0;
      z-index: 0;
    }
  }

  .nav-list li a:hover {
    color: #deebfd;
  }

  .center-align {
    text-align: center;
  }

  .right-align {
    text-align: right;
  }

  .left-align {
    text-align: left;
  }


  h1, h2, h3 {
    margin-bottom: .5em;
    font-weight: 300;
  }

  h2 {
    font-size: 1.9em;
    color: gray;
    font-weight: 100;
  }

  .block-underline {
    display: block;
    width: 500px;
    overflow: show !important;
    text-align: left;
    white-space: nowrap;
    line-height: 1.4em;
    border-bottom: 1px solid $homespree_accent_light;
  }

  .block-underline-full {
    display: block;
    width: 100%;
    max-width: 100%;
    text-align: left;
    line-height: 1.4em;
    border-bottom: 2px solid $homespree_accent_light;
  }

  .block-underline-small {
    display: inline-block;
    width: 100%;
    overflow: show !important;
    text-align: left;
    line-height: 1.4em;
    border-bottom: 1px solid $homespree_accent_light;
    margin-bottom: 5px !important;
  }

  h3{
    color: $homespree_light;
    text-align: left;
    font-size: 22px;
    line-height: 23px;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  h4 {
    font: 400 16px/26px "Helvetica Neue", helvetica, sans-serif;
    margin: 0;
    margin-bottom: 1em;
    margin-top: 0;
    color: $homespree_accent;
  }

  .subhead {
    font-family: "Helvetica Neue", helvetica, sans-serif;
    font-weight: 400;
    color: #aaaaaa;
    margin-bottom: 40px;
  }

  .quotes {
    font-family: "Helvetica Neue", helvetica, sans-serif;
    font-size: 24px;
    color: #555555;
  }


  .navbar .nav .active a,
  .footer-box .active a {
    color: #ffffff;

    background-color: transparent;
    -webkit-box-shadow: none;
    box-shadow: none;
    text-shadow: 0px 0px 13px black, 0px -1px 1px rgba(0, 0, 0, 0.6);
  }

  .navbar .nav li a:hover,
  .footer-box a:hover {
    color: #334fa8;
    text-shadow: none;
  }

  .navbar .nav .active a:hover,
  .footer-box .active a:hover {
    color: #4fb6e9;
    text-shadow: none;
    background-color: transparent;
    -webkit-box-shadow: none;
    box-shadow: none;
    text-shadow: 0 1px 0 #ffffff;
  }

  /*
  * highlight section
  */

  .highlight {
    margin-top: 40px;

  }


  /*
  * shadows
  */

  .shadow {
    position: relative;

    &:before, &:after {
      left: 18px;
      z-index: -1;
      position: absolute;
      width: 90%;
      height: 90%;
      bottom: 18px;
      content: "";

      -webkit-transform: rotate(-1deg);
      -moz-transform: rotate(-1deg);
      -o-transform: rotate(-1deg);
      transform: rotate(-1deg);

      -webkit-box-shadow: 0 10px 10px rgba(0, 0, 0, 1);
      -moz-box-shadow: 0 10px 10px rgba(0, 0, 0, 1);
      box-shadow: 0 10px 10px rgba(0, 0, 0, 1);
    }
  }

  #logo {
    margin: -7px -180px -27px 0;

    img {
      width: 266px;
    }
  }


}
