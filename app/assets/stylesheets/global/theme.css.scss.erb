body {
  background-image: url(<%= asset_path "homebackground.png" %>);
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.secondary .container {
  margin-top: -45px;
}

p {
  font: 14px/23px "Helvetica Neue", helvetica, sans-serif;
}

a {
  color: #338bb8;

  &:link, &:visited {
  }

  &:hover {
    color: #3799ca;
  }
}

label, input, button, select, textarea {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: normal;
  line-height: 18px;
}

.nav-list li a:hover {
  color: black;
}

.center-align {
  text-align: center;
}

.right-align {
  text-align: right;
}

.left-align {
  text-align: left;
}

h3 {
  text-align: center;

  margin: 0 0 15px;
  font: 2em "helvetica neue", helvetica, sans-serif;
}

h4 {
  font: 600 16px/26px "Helvetica Neue", helvetica, sans-serif;
}

.subhead {
  font-family: "Helvetica Neue", helvetica, sans-serif;
  font-weight: 400;
  color: #aaaaaa;
  margin-bottom: 40px;
}

.quotes {
  font-family: "Helvetica Neue", helvetica, sans-serif;
  font-size: 24px;
  color: #555555;
}


.navbar .nav .active a,
.footer-box .active a {
  color: #ffffff;

  background-color: transparent;
  -webkit-box-shadow: none;
  box-shadow: none;
  text-shadow: 0px 0px 13px black, 0px -1px 1px rgba(0, 0, 0, 0.6);
}

.navbar .nav li a:hover,
.footer-box a:hover {
  color: #334fa8;
  text-shadow: none;
}

.navbar .nav .active a:hover,
.footer-box .active a:hover {
  color: #4fb6e9;
  text-shadow: none;
  background-color: transparent;
  -webkit-box-shadow: none;
  box-shadow: none;
  text-shadow: 0 1px 0 #ffffff;
}

/*
* highlight section
*/

.highlight {
  margin-top: 40px;

}


/*
* shadows
*/

.shadow {
  position: relative;

  &:before, &:after {
    left: 18px;
    z-index: -1;
    position: absolute;
    width: 90%;
    height: 90%;
    bottom: 18px;
    content: "";

    -webkit-transform: rotate(-1deg);
    -moz-transform: rotate(-1deg);
    -o-transform: rotate(-1deg);
    transform: rotate(-1deg);

    -webkit-box-shadow: 0 10px 10px rgba(0, 0, 0, 1);
    -moz-box-shadow: 0 10px 10px rgba(0, 0, 0, 1);
    box-shadow: 0 10px 10px rgba(0, 0, 0, 1);
  }
}

#logo {
  margin: -7px -180px -27px 0;

  img {
    width: 266px;
  }
}
