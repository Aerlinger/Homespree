*/

.footer-box {
  padding: 30px 0;
  text-align: center;
  font-family:  "Helvetica Neue", helvetica, sans-serif;
  font-size: 14px;
  line-height: 26px;
  color: #888888;

  img {
    margin: 0;
  }

  .links {
    margin: 5px 0px 20px 0px;

    a {
      display: inline-block;
