$headerHeight: 10px;
$shadow: 0px 0 8px 0 rgba(0, 0, 0, 0.5);


body {

  background-image: url(<%= asset_path "homebackground.png" %>);
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

p {
  font: 14px/23px "Helvetica Neue", helvetica, sans-serif;
}

a {
  color: #338bb8;

  &:link, &:visited {
  }

  &:hover {
    color: #3799ca;
  }
}

label, input, button, select, textarea {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: normal;
  line-height: 18px;
}


.center-align {
  text-align: center;
}

.right-align {
  text-align: right;
}

.left-align {
  text-align: left;
}



h3 {
  text-align: center;

  margin: 0 0 15px;
  font: 2em "helvetica neue", helvetica, sans-serif;
}

h4 {
  font: 600 16px/26px "Helvetica Neue", helvetica, sans-serif;
}

.subhead {
  font-family: "Helvetica Neue", helvetica, sans-serif;
  font-weight: 400;
  color: #aaaaaa;
  margin-bottom: 40px;
}

.quotes {
  font-family: "Helvetica Neue", helvetica, sans-serif;
  font-size: 24px;
  color: #555555;
}

.header {

  height: $headerHeight;
  margin-bottom: -$headerHeight;
  opacity: 1;
}

/*
* navigation lists on both footer and nav-header
*/

.navbar-inner {
  background: url(<%= asset_path("bg/bg2.png") %>) repeat;
  background-color: white;
  box-shadow: none;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  filter: none;

  border: 3px solid #9ebdff;
}

.navbar {
  opacity: 1;
  box-shadow: 12px 0 15px 0 rgba(0, 0, 0, 0.5);

  .brand {
    font-family: "Helvetica Neue", helvetica, sans-serif;
    font-weight: 700;
    font-size: 24px;
    padding: 0;
    margin-left: 0;
  }

  .nav {
    float: right;
    display: inline-block;
    height: 52px !important;
    background: rgba(255, 255, 255, 0.63);

    li {
      height: 100%;
      display: table;
      margin-left: .5em;

      &:hover {
        background: white;

        box-shadow: $shadow;
        border-bottom: 1px solid #dae1ff;
        border-left: 1px solid #90a6ff;
        border-right: 1px solid #bbcfff;
      }

      a {

        font: 400 19px/28px "Helvetica Neue", helvetica, sans-serif;
        padding: 15px 20px;
        margin: auto !important;

        text-shadow: none;
        color: rgba(18, 28, 26, 0.68);


        text-align: center;
        height: 100%;

        &:hover {
          color: black !important;
        }
      }
    }
  }
}


.footer-box a {
  font: 600 16px/26px "Helvetica Neue", helvetica, sans-serif;
  padding: 6px 18px;

  color: #ffffff;

  text-shadow: 0px 0px 13px black, 0px -1px 1px rgba(0, 0, 0, 0.6);

  line-height: 16px;
  text-align: center;
}

.navbar .nav .active a,
.footer-box .active a {
  color: #ffffff;

  background-color: transparent;
  -webkit-box-shadow: none;
  box-shadow: none;
  text-shadow: 0px 0px 13px black, 0px -1px 1px rgba(0, 0, 0, 0.6);
}

.navbar .nav li a:hover,
.footer-box a:hover {
  color: #bceaff;
}

.navbar .nav .active a:hover,
.footer-box .active a:hover {
  color: #4fb6e9;
  text-shadow: none;
  background-color: transparent;
  -webkit-box-shadow: none;
  box-shadow: none;
  text-shadow: 0 1px 0 #ffffff;
}

/*
* highlight section
*/

.highlight {
  margin-top: 40px;

  img {
    margin-left: -32px;
  }
}


/*
* footer
*/

.footer-box {
  padding: 30px 0;
  text-align: center;
  font-family:  "Helvetica Neue", helvetica, sans-serif;
  font-size: 14px;
  line-height: 26px;
  color: #888888;

  img {
    margin: 0;
  }

  .links {
    margin: 5px 0px 20px 0px;

    a {
      display: inline-block;
      margin: 4px 0px;

      &:hover {
        text-decoration: none;
      }
    }
  }

}

/*
* shadows
*/

.shadow {
  position: relative;

  &:before, &:after {
    left: 18px;
    z-index: -1;
    position: absolute;
    width: 90%;
    height: 90%;
    bottom: 18px;
    content: "";

    -webkit-transform: rotate(-1deg);
    -moz-transform: rotate(-1deg);
    -o-transform: rotate(-1deg);
    transform: rotate(-1deg);

    -webkit-box-shadow: 0 10px 10px rgba(0, 0, 0, 1);
    -moz-box-shadow: 0 10px 10px rgba(0, 0, 0, 1);
    box-shadow: 0 10px 10px rgba(0, 0, 0, 1);
  }
}

#logo {
  margin: -7px 0px -27px 0px;

  img {
    width: 60%;
  }
}
