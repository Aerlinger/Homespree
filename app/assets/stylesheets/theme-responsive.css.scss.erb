@media (max-width: 767px) {

  .container {
    padding-left: 8px;
    padding-right: 8px;
  }

  .navbar {

    .brand {
      float: none;
      margin-bottom: 15px;
      margin-top: 8px;
      padding: 0;
    }

    .nav {
      clear: both;
      float: none;
      margin-top: 15px;
      margin: 12px 10px 0 0;

      li {
        float: left;
        padding: 6px 36px 6px 0px;
        margin: 4px 0px;

        a {
          text-align: left;
          padding-left: 0px;
          padding-right: 0px;
        }
      }

    }
  }

}

@media (max-width: 480px) {
  h2 {
    font-size: 32px;
    line-height: 52px;
    text-align: left;
    font: 2.2em "helvetica neue", helvetica, sans-serif;
    margin: 18px 0;
  }

  h3 {
    font-size: 20px;
    line-height: 32px;
    text-align: left;
    font: 2em Helvetica;
    margin: 0 0 15px;
  }
}