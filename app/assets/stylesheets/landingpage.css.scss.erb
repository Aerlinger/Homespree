$pitch_height: 613px;
$shadow: 0px 0 8px 0 rgba(0, 0, 0, 0.5);

.pitch {
  padding-top: 60px;
  min-height: $pitch_height;

  .search-area {

    h2 {
      text-align: left;
      font: 2.2em "helvetica neue", helvetica, sans-serif;
      margin: 18px 0;

      text-shadow: 0 0 13px rgba(0, 0, 0, 1), 0 -1px 1px rgba(0, 0, 0, 0.6);

      strong {
        font-weight: 700;
      }
    }

    #search_form {
      margin-top: 140px;
      width: 657px;

      background: none repeat scroll 0px 0px rgba(255, 255, 255, 0.3);
      box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
      border-radius: 3px 3px 3px 3px;
      border: 1px solid rgb(0, 0, 0);
      padding: 4px;
      line-height: 1.4;
    }

    .icon-and-text {
      height: 50px;
      width: 125px;
      margin-left: 5px;
      margin-top: 1px;
    }

    input[type="email"] {
      box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.4) inset;
      float: left;
      border: 1px solid #000000;
      border-radius: 3px;
      padding: 8px 12px;
      text-shadow: 0 1px 1px #FFFFFF;
    }

    .call-to-action {
      &.large {
        font-size: 18px;
      }

      &.green {
        border-color: black;
        background: #5dc907; /* Old browsers */
        background: -moz-linear-gradient(top,  #5dc907 0%, #57b906 50%, #50ad06 50.1%, #4fac04 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#5dc907), color-stop(50%,#57b906), color-stop(50.1%,#50ad06), color-stop(100%,#4fac04)); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top,  #5dc907 0%,#57b906 50%,#50ad06 50.1%,#4fac04 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top,  #5dc907 0%,#57b906 50%,#50ad06 50.1%,#4fac04 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top,  #5dc907 0%,#57b906 50%,#50ad06 50.1%,#4fac04 100%); /* IE10+ */
        background: linear-gradient(to bottom,  #5dc907 0%,#57b906 50%,#50ad06 50.1%,#4fac04 100%); /* W3C */
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#5dc907', endColorstr='#4fac04',GradientType=0 ); /* IE6-9 */
      }

      font-weight: 500;
      color: white;
      text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.4);
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;

      vertical-align: middle;
      border-radius: 4px;
      border-width: 1px;
      border-style: solid;

      box-shadow: 0 0 0.2em rgba(255, 255, 255, 0.5) inset, 0 1px 2px rgba(0, 0, 0, 0.15), 0 0 0 black;
    }

    #submit_success {
      display: none;
      margin-bottom: 2px;
      font-weight: bold;
      text-align: left;
    }

    #customer_type {


      .caret {
        margin-left: -10px;
      }

      & > a {
        border-color: black;
        color: black;

        background: #ffffff; /* Old browsers */
        background: -moz-linear-gradient(top,  #ffffff 0%, #f1f1f1 50%, #e1e1e1 51%, #f6f6f6 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(50%,#f1f1f1), color-stop(51%,#e1e1e1), color-stop(100%,#f6f6f6)); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top,  #ffffff 0%,#f1f1f1 50%,#e1e1e1 51%,#f6f6f6 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top,  #ffffff 0%,#f1f1f1 50%,#e1e1e1 51%,#f6f6f6 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top,  #ffffff 0%,#f1f1f1 50%,#e1e1e1 51%,#f6f6f6 100%); /* IE10+ */
        background: linear-gradient(to bottom,  #ffffff 0%,#f1f1f1 50%,#e1e1e1 51%,#f6f6f6 100%); /* W3C */
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#f6f6f6',GradientType=0 ); /* IE6-9 */


        font-size: 18px;
        width: 165px;
        height: 30px;
        padding-top: 13px;
        border: 1px solid #2f2f2f;
        text-align: left;
      }

      li {
        width: 190px;
        border: none !important;
      }

      height: 48px !important;

      width: 190px;

      margin-left: 7px;
    }

    #email_signup {
      color: black;
      font-size: 2em;
      height: 30px;
      line-height: normal;
      margin-top: 2px;
      width: 300px;
    }

  }

  #iphone_preview {
    position: absolute;
    right: 0px;
    z-index: 3;

    width: 550px;
    height: 572px;

    background-size: 80px auto;
    background: url(<%= asset_path("iphone.png") %>) right bottom no-repeat;
  }
}

.showcase {
  box-shadow: 12px 0 15px 0 rgba(0, 0, 0, 0.5);
  background: url(<%= asset_path("bg/bg5.png") %>) repeat;
  background-color: white;

  .carousel a {
    color: #ffffff;

    .item a {
      color: #3799ca;
    }
  }

  .carousel-caption {
    position: static;
    background: transparent;
  }

  .carousel .item > p,
  .carousel-caption p {
    font: 14px/23px  "Helvetica Neue", helvetica, sans-serif;
    text-shadow: #ffffff 0 1px 0;
    color: #333333;
    text-align: center;
  }

  #screenshot_carousel {
    img {
      width: 65%;
      height: auto;

      box-shadow: $shadow;
    }
  }
}