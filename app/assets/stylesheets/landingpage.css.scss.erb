$pitch_height: 613px;

.pitch  {
  padding-top: 60px;

  min-height: $pitch_height;
}

#checkout {
  font-size: 2em;
  height: 30px;
  line-height: 4em;
  margin-top: 2px;
  width: 375px;
}

.search-area input[type="text"], .search-area input[type="email"] {
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.4) inset;
  float: left;
  height: 23px;
  margin: 0;
  width: 110px;
}

search-area input[type="text"], search-area input[type="email"], .search-area .dropdown {
  border: 1px solid #000000;
  border-radius: 3px 3px 3px 3px;
  font-size: 17px;
  padding: 8px 12px;
  text-shadow: 0 1px 1px #FFFFFF;
}

input:-moz-placeholder {
  color: #999999;
}

textarea, input[type="text"], input[type="email"], input[type="password"], input[type="datetime"], input[type="datetime-local"], input[type="date"], input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"], .uneditable-input {
  background-color: white;
  border: 1px solid #CCCCCC;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
  transition: border 0.2s linear 0s, box-shadow 0.2s linear 0s;
}

.search-area input[type="text"],  .search-area input[type="email"], .dropdown {
  border: 1px solid #000000;
  border-radius: 3px 3px 3px 3px;
  font-size: 17px;
  padding: 8px 12px;
  text-shadow: 0 1px 1px #FFFFFF;
}

input:-moz-placeholder {
  color: #999999;
}

input:-moz-placeholder, textarea:-moz-placeholder {
  color: #999999;
}

select, textarea, input[type="text"], input[type="email"] input[type="password"], input[type="datetime"], input[type="datetime-local"], input[type="date"], input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"], .uneditable-input {
  border-radius: 4px 4px 4px 4px;
  color: #555555;
  display: inline-block;
  font-size: 14px;
  height: 20px;
  line-height: 20px;
  margin-bottom: 10px;
  padding: 4px 6px;
  vertical-align: middle;
}

label, input, button, select, textarea {
  font-size: 13px;
  font-weight: normal;
  line-height: 18px;
}

input, button, select, textarea {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

// Button:

label, input, button, select, textarea {
  font-size: 13px;
  font-weight: normal;
  line-height: 18px;
}

.btn.large {
  font-size: 18px;
}

.search-area .btn {
  background: none repeat scroll 0 0 #f21d9f !important;
}

.search-area .icon-and-text {
  height: 50px;
  width: 125px;
  margin-left: 5px;
  margin-top: 1px;
}

.btn.green {
  border-color: black;
  background: -moz-linear-gradient(center top, #5DC907 0%, #57B906 50%, #50AD06 50.1%, #4FAC04 100%) repeat scroll 0 0 transparent;
}

.btn {
  display: inline-block;
  padding: 0.4em 0.9em;
  -moz-box-sizing: border-box;
  text-align: center;
  font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
  vertical-align: middle;
  margin-bottom: 0px;
  border-radius: 4px 4px 4px 4px;
  border-width: 1px;
  border-style: solid;
  -moz-border-top-colors: none;
  -moz-border-right-colors: none;
  -moz-border-bottom-colors: none;
  -moz-border-left-colors: none;
  border-image: none;
  background: -moz-linear-gradient(center top , rgb(37, 168, 227) 0%, rgb(28, 146, 200) 50%, rgb(24, 139, 193) 50.1%, rgb(18, 126, 175) 100%) repeat scroll 0% 0% transparent;
  border-color: rgb(18, 126, 175) rgb(24, 120, 165) rgb(18, 106, 148);
  box-shadow: 0px 0px 0.2em rgba(255, 255, 255, 0.5) inset, 0px 1px 2px rgba(0, 0, 0, 0.15), 0px 0px 0px rgb(0, 0, 0);
  font-size: 14px;
  line-height: normal;
  font-weight: 500;
  color: rgb(255, 255, 255);
  text-shadow: 0px -1px 1px rgba(0, 0, 0, 0.4);
}


// Search form:
#search_form {
  margin-top: 140px;
  width: 535px;
}

.search-area form {
  background: none repeat scroll 0px 0px rgba(255, 255, 255, 0.3);
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
  border-radius: 3px 3px 3px 3px;
  border: 1px solid rgb(0, 0, 0);
  padding: 4px;
  line-height: 1.4;
}

.search-area {
  text-shadow: 0px 0px 15px rgba(0, 0, 0, 0.6), 0px -1px 1px rgba(0, 0, 0, 0.6);
}

#feature-screenshot {
  float: right;
}

#iphone_preview {
  position: absolute;
  right: 0;
  z-index: 3;

  width: 550px;
  height: 572px;

  background-size:80px auto;

  background: url(<%= asset_path("iphone.png") %>) right bottom no-repeat;
}

.showcase {
  box-shadow: 12px 0 15px 0 rgba(0, 0, 0, 0.5);
  background: url(<%= asset_path("bg.png") %>) repeat-xy;
}

#myCarousel {
  img {
    width: 80%;
    height: auto;
  }
}