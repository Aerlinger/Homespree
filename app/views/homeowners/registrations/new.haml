%footer.white.navbar-fixed-bottom
  Already have an account?
  =link_to "Sign in", new_contractor_session_path, class: "btn btn-black"

#login-wraper
  = simple_form_for resource, :as => resource_name, :url => registration_path(resource), class: "form login-form" do |f|
    %legend
      %span.blue Create Homeowner Profile

    .body
      = f.input :email, label: 'Your Email', input_html: { value: resource.email }, placeholder: 'example@example.com', id: "email"
      = f.input :password, id: "password"

      = f.button :submit, "Create profile", class: "btn btn-success"
