= form_for @homeowner do |f|
  - if @homeowner.errors.any?
    #error_explanation
      %h2= "#{pluralize(@homeowner.errors.count, "error")} prohibited this homeowner from being saved:"
      %ul
        - @homeowner.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :photos
    = f.text_field :photos
  .field
    = f.label :appointments
    = f.text_field :appointments
  .actions
    = f.submit 'Save'
