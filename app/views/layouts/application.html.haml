-#/ [if gt IE 8]><!
%html.no-js{:dir => 'ltr', :lang => 'en'}
  -#/ <![endif]
  %head
    = javascript_include_tag 'application'
    = stylesheet_link_tag 'application'
    = csrf_meta_tags

    %title Homespree | Stress-free Home Improvement
    = render 'partials/header_extras'

  -#%body.DESKTOP
  = content_tag :body, class: "desktop #{current_layout}" do


    = render "partials/header"
    = render 'partials/flash', flash: flash

    = content_for?(:content) ? yield(:content) : yield

    = render 'partials/footer_sub'
    = render 'partials/footer_scripts'