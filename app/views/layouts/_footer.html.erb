<footer class="container footer-box">
  <%= image_tag asset_path('homespreelogofooter.png'), alt: "Homespree" %>

  <nav class="links">
    <%= link_to "About", about_path %>
    <%= link_to "Blog", "http://homespree.wordpress.com/", :target => '_blank'%>
    <%= link_to "Contact", contact_path %>
    <%= link_to "Jobs", jobs_path %>
  </nav>

  <nav class="social-icons">
    <a href="https://twitter.com/homespree">
      <%= image_tag asset_path('twitter-icon.png'), alt: "twitter-icon" %>
    </a>
    <a href="https://www.facebook.com/Homespree"><%= image_tag asset_path('facebook-icon.png'), alt: "fb" %></a>
    <a href="#"><%= image_tag asset_path('googleplus-icon.png'), alt: "gplus" %></a>
  </nav>

  <%# render "pages/partials/facebook_likes" %>
  <%# render "pages/partials/tweets" %>

</footer>

<% if Rails.env.production? %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-37015205-1']);
    _gaq.push(['_setDomainName', 'myhomespree.com']);
    _gaq.push(['_setAllowLinker', true]);
    _gaq.push(['_trackPageview']);

    (function () {
      var ga = document.createElement('script');
      ga.type = 'text/javascript';
      ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(ga, s);
    })();

    // Fixes placeholder not showing up in IE.
    $(document).ready(function(event) {
      Placeholders.init();
    })

  </script>

<% end %>

<% if Rails.env.development? %>
  <%= debug(params) %>
  <%= debug(cookies) %>
<% end %>