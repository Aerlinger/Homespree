<section class="pitch">

  <div class="container">
    <div class="row">
      <header class="highlight span12">

        <div class="search-area">

          <div id="iphone_preview"></div>

          <img class="stressfree" src="/assets/stressfree.png">
          <h2 style="color: white;">Get stuff done. Skip the hassle.</h2>

          <!-- Ajax email submission form: -->
          <%= form_tag email_list_create_path, method: :post, remote: true, authenticity_token: false,
                       class: "custom show-search-options position-left", id: "search_form" do %>
              <%= email_field_tag(:email, "", type: "text", class: "checkout search-option ui-datepicker-target",
                                  id:"checkout", placeholder: "Sign Up") %>
              <%= submit_tag "Submit", :disable_with => "Thanks!",
                             id: "submit_location", class: "large green btn icon-and-text position-right" %>
          <% end %>

        </div>


      </header>
    </div>
  </div>

</section>

<section class="showcase">
  <div class="container">
    <div class="highlight row">
      <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
          <div class="item active">
            <p>
              <%= image_tag asset_path('3_iphones.png'), alt: "screenshot" %>
            </p>
            <article class="carousel-caption">
              <h3>Here you can showcase some testimonials or screenshots</h3>

              <p class="center-align">Built with Twitter Bootstrap's Carousel component</p>
            </article>
          </div>
          <div class="item">
            <p>
              <%= image_tag asset_path('code.png'), alt: "code" %>
            </p>
            <article class="carousel-caption">
              <h3><strong>App</strong> is a powerful and robust text-editor.</h3>

              <p class="center-align">Hit it up! It'll be your favorite text-editor!</p>
            </article>
          </div>
          <div class="item">
            <p>
              <%= image_tag asset_path('folders.png'), alt: "folders" %>
            </p>
            <article class="carousel-caption">
              <h3 class="quotes">"I designed LandingStrip to be easily editable for everyone."</h3>

              <p class="center-align">- Ace Subido.</p>
            </article>
          </div>

        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
      </div>
    </div>
  </div>
</section>

