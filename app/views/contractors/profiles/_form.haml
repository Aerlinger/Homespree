= simple_form_for(@contractor) do |f|
  - if @contractor.errors.any?
    #error_explanation
      %h2
        = pluralize(@contractor.errors.count, "error")
        prohibited this contractor from being saved:
      %ul
        - @contractor.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    %br/
    = f.text_field :last_name
  .actions
    = f.submit
