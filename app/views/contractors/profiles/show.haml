-# Contractor Profile Page
-#=============================================================================
- content_for :static_page do
  - present @contractor do |contractor_presenter|
    #profile

      -# Top information prompt
      -#========================================================================
      = render "info_header", contractor_presenter: contractor_presenter


      -# Description
      -#========================================================================
      #description.section
        .row-fluid.primary
          .span6
            = contractor_presenter.title
            %h5.slogan= @contractor.slogan
            %p= @contractor.description
            = link_to "Request a Bid", "javacript:void(0)", id: "submit_bid", class: "btn btn-large btn-success"
          .span6
            #portfolio_photos.carousel.slide
              .carousel-inner
                .item.active
                  = image_tag asset_path("house.png")
                  .carousel-caption
                    %p Photo Caption
                .item
                  = image_tag "http://placehold.it/600x400"
                  .carousel-caption
                    %p Photo Caption

              = link_to raw("&lsaquo;"), "#portfolio_photos", class: "carousel-control left", data: {slide: "prev"}
              = link_to raw("&rsaquo;"), "#portfolio_photos", class: "carousel-control right", data: {slide: "next"}

        %hr/

      -# Secondary Info
      -#===========================================================================
      #secondary_info.section
        .row-fluid.secondary
          .span4
            #portrait_wrapper.pull-left
              = image_tag "contractors/default_portrait.jpg"
              //= contractor_presenter.portrait_picture

            %h2#full_name= contractor_presenter.full_name
            %h3#phone_num (804) 432-1234
            %h3#website= contractor_presenter.website
            %h5#years_in_business 4 years in business

            %table.insurance
              %tr
                %td <span class="check">&#x2713</span> Licensed <a class="question" id="licensed" href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="A license is...">?</a>
                %td State of NJ <a>details &raquo</a>
              %tr
                %td License #
                %td 1234567890
              %tr
                %td &#x2713 Bonded <a class="question" href="#">?</a>
                %td Up to $500,000 <a>details &raquo</a>
              %tr
                %td Bond #
                %td 1234567890
              %tr
                %td &#x2713 BBB Rated <a class="question">?</a>
                %td Grade of A+ <a>details &raquo</a>


          .span5.specialties
            %h2 Joe specializes in:
            //= contractor_presenter.specialties
            =content_tag :ul do
              =content_tag :li, "<span class='check'>&#x2713</span> Indoor & Outdoor Painting <a href='#'>Book now &raquo</a>".html_safe, class: "check-ico"
              =content_tag :li, "<span class='check'>&#x2713</span> General Contracting <a href='#'>Book now &raquo</a>".html_safe, class: "check-ico"
              =content_tag :li, "<span class='check'>&#x2713</span> Hardwood Flooring <a href='#'>Book now &raquo</a>".html_safe, class: "check-ico"
              =content_tag :li, "<span class='check'>&#x2713</span> Pool Service and Cleaning <a href='#'>Book now &raquo</a>".html_safe, class: "check-ico"
              =content_tag :li, "<span class='check'>&#x2713</span> Unclogging drains beneath soil <a href='#'>Book now &raquo</a>".html_safe, class: "check-ico"
              =content_tag :li, "<span class='check'>&#x2713</span> Doors & Windows <a href='#'>Book now &raquo</a>".html_safe, class: "check-ico"

          .span3.map
            #google_map= image_tag "profile/staticmap.png"
            #address
              %p 1234 First Lane<br />Brunswick, NJ 00284
              %a View full map &raquo


      -# Reviews
      -#===========================================================================
      #reviews.section
        .row-fluid.comments

          %hr
          %h2 Reviews from Homeowners
          %hr

          =render 'contractors/profiles/review',
                  portrait_url: "contractors/default_portrait.jpg",
