<% content_for :registration_page do %>

  <%= provide :title, "Sign in with your email" %>

  <%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f| %>

    <%= f.error_notification message: "All fields are required." %>

    <%= f.input :email %>
    <%= f.input :password %>

    <%= f.button :submit, "Sign In" %>

    <hr>
    <%= render "contractors/shared/links" %>

  <% end %>

<% end %>