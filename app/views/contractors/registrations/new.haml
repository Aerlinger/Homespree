#login-wraper

  = simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), class: "form login-form" do |f|
    %legend
      Create a new
      %span.blue Contractor
      profile

    .body
      = f.input :email, input_html: { value: @contractor.email }
      = f.input :company_title, text: "Business name or title"
      = f.input :password

      = f.button :submit, text: "Create profile", class: "btn btn-success"


%footer.white.navbar-fixed-bottom
  Already have an account?
  =link_to "Sign in", new_contractor_session_path, class: "btn btn-black"
  -#=link_to "Submit", create_mailing_list_path, class: "btn btn-black"

