
%footer.white.navbar-fixed-bottom
  Already have an account?
  =link_to "Sign in", new_contractor_session_path, class: "btn btn-black"
  -#=link_to "Submit", create_mailing_list_path, class: "btn btn-black"

#login-wraper
  -#= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), class: "form login-form" do |f|
  = simple_form_for resource, :as => resource_name, :url => contractor_registration_path(resource), class: "form login-form" do |f|
    %legend
      %span.blue Create Contractor Profile

    .body
      = f.input :company_title, text: "Business name or title", id: "company_title"
      = f.input :email, label: 'Your Email', input_html: { value: @contractor.email }, placeholder: 'example@example.com', id: "email"
      = f.input :password, id: "password"

      = f.button :submit, "Create profile", class: "btn btn-success"

