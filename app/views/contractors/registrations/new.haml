- content_for :login_page do
  .outer
    .middle
      #login-wrapper
        -#= simple_form_for contractor_registration_path do |f|
        = simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), class: "form login-form" do |f|
          %legend
            %span.blue Join Homespree as a Professional
          %p#intro Create a profile and increase your customer reach in minutes.
          .body
            = f.input :company_title, text: "Business name or title", id: "company_title"
            = f.input :email, label: 'Your Email', input_html: { value: resource.email }, placeholder: 'user@example.com', id: "email"
            = f.input :password, id: "password"

            = f.button :submit, "Create profile", class: "btn btn-success"

        %a <b>Homeowner?</b> Create an account #{link_to "here", new_homeowner_registration_path}

  %footer.white.navbar-fixed-bottom
    Already have an account?
    =link_to "Sign in", new_user_session_path, class: "btn btn-black"