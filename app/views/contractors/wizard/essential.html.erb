<% content_for :registration_page do %>

  <%= provide :title, "Tell us more about yourself" %>

  <%= render layout: 'form' do |f| %>

    <%= f.input :mobile_number %>
    <%= f.input :office_number %>

    <%= f.input :first_name %>
    <%= f.input :last_name %>

    <%= content_tag(:h2, "Enter your address", class: "block-underline-full") %>

    <%= f.simple_fields_for :addressable do |a| %>
      <%= a.input :line1 %>
      <%= a.input :line2 %>
      <%= a.input :city %>
      <%= a.input :state %>
      <%= a.input :zipcode %>
    <% end %>

    <%= content_tag(:h2, "What are your specialties?", class: "block-underline-full") %>

    <%= f.select :specialties, Specialty.types %>
    <%= f.input :specialties %>

  <% end %>

<% end %>