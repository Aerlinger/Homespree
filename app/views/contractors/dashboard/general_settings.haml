-# General Settings:
-#===========================================================================
-#   Basic Account Info (Accordion Layout)
-#   Change Password
-#   Resend Password
-#   Profile Customization
-#      Delete Account?
-#===========================================================================
- content_for :dashboard do
  .span5.descriptiontext
    = provide :title, "Edit account settings"

    .accordion#accordion2
      .accordion-group
        .accordion-heading
          %a.accordion-toggle{data: {toggle: "collapse", parent: "#accordion2"}, href: "#collapseOne"}
            Email and Password Settings
        #collapseOne.accordion-body.collapse.in
          %hr/
          %h3 Email
          %br

        -# Change Email Form
        -#------------------------------------------------------------------------------------------------
        = form_for(current_contractor, :html => {:method => :put}) do |f|
          -#= devise_error_messages!
          %div
            = f.label "Change Email"
            = f.email_field :email, :autofocus => true
          %div
            = f.label "Verify Password"
            = f.password_field :current_password
          %div= f.submit "Update", :class => "btn btn-success"

    -# Change Password
    -#------------------------------------------------------------------------------------------------
    = form_for(current_contractor, :html => {:method => :put}) do |f|
      -#= devise_error_messages!
      %div
        %br
        %h3 Change Password
        %br
        = f.label "Current PAssword"

        = f.password_field :current_password
      %div
        = f.label "New Password"
        = f.password_field :password, :autocomplete => "off"
      %div
        = f.label "Re-type New Password"
        = f.password_field :password_confirmation
      %div= f.submit "Update", :class => "btn btn-success"

    %hr/
    %h3 Cancel my account
    %br

    %p
      Unhappy? #{button_to "Cancel my account", registration_path(current_contractor), :data => {:confirm => "Are you sure?"}, :method => :delete, :class => "btn btn-danger"}
